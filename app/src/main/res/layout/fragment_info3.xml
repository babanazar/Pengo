<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pengout.view.activity.InformationActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/konstreynt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/headerOfPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Choose categories you like"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/business2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.431"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.139" />


            <Button
                android:id="@+id/art2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="68dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/art2"
                app:layout_constraintBottom_toTopOf="@+id/education2"
                app:layout_constraintTop_toBottomOf="@id/headerOfPage"
                app:layout_constraintStart_toStartOf="@id/education2"
                />

            <Button
                android:id="@+id/business2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="76dp"
                android:background="@drawable/business2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerOfPage"
                app:layout_constraintStart_toStartOf="@id/entertainment2"
                tools:layout_editor_absoluteY="104dp" />

            <Button
                android:id="@+id/education2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/art2"
                android:layout_marginBottom="8dp"
                android:background="@drawable/education2"
                app:layout_constraintEnd_toEndOf="@id/health2"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                tools:layout_editor_absoluteX="66dp" />

            <Button
                android:id="@+id/entertainment2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/art2"
                android:layout_marginStart="68dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/entertainment2"
                app:layout_constraintStart_toEndOf="@+id/education2"
                app:layout_constraintTop_toBottomOf="@+id/business2" />

            <Button
                android:id="@+id/health2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/education2"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/health2"
                app:layout_constraintEnd_toStartOf="@+id/sport2"
                app:layout_constraintStart_toStartOf="@+id/education2"
                app:layout_constraintTop_toBottomOf="@+id/education2" />

            <Button
                android:id="@+id/sport2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/education2"
                android:layout_marginTop="36dp"
                android:background="@drawable/sport2"
                app:layout_constraintEnd_toEndOf="@id/workshop2"
                app:layout_constraintTop_toBottomOf="@+id/entertainment2"
                tools:layout_editor_absoluteX="234dp" />

            <Button
                android:id="@+id/trip2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/health2"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/trip2"
                app:layout_constraintEnd_toStartOf="@+id/workshop2"
                app:layout_constraintTop_toBottomOf="@+id/health2" />

            <Button
                android:id="@+id/workshop2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="72dp"
                android:background="@drawable/workshop2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sport2" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Art"
                app:layout_constraintTop_toBottomOf="@+id/art2"
                app:layout_constraintStart_toStartOf="@+id/art2"
                tools:layout_editor_absoluteX="104dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Business"
                app:layout_constraintStart_toStartOf="@id/business2"
                app:layout_constraintTop_toBottomOf="@+id/business2"
                tools:layout_editor_absoluteX="255dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education"
                app:layout_constraintStart_toStartOf="@id/education2"
                app:layout_constraintTop_toBottomOf="@id/education2"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="349dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Entertainment"
                app:layout_constraintBottom_toTopOf="@+id/sport2"
                app:layout_constraintStart_toStartOf="@id/entertainment2"
                app:layout_constraintTop_toBottomOf="@+id/entertainment2"
                tools:layout_editor_absoluteX="243dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Health"
                app:layout_constraintTop_toBottomOf="@+id/health2"
                app:layout_constraintStart_toStartOf="@id/health2"
                tools:layout_editor_absoluteX="95dp" />

            <TextView
                android:id="@+id/sportYazisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sport"
                app:layout_constraintStart_toStartOf="@id/sport2"
                app:layout_constraintTop_toBottomOf="@+id/sport2"
                tools:layout_editor_absoluteX="268dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Trip"
                app:layout_constraintStart_toStartOf="@id/trip2"
                app:layout_constraintTop_toBottomOf="@+id/trip2" />

            <TextView
                android:id="@+id/workshopText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Workshop"
                app:layout_constraintStart_toStartOf="@id/workshop2"
                app:layout_constraintTop_toBottomOf="@+id/workshop2"
                tools:layout_editor_absoluteX="261dp" />


        </android.support.constraint.ConstraintLayout>


        <Button
            android:id="@+id/button_ready"
            android:layout_below="@id/konstreynt"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready!"
            tools:layout_editor_absoluteX="162dp" />
</RelativeLayout>
    </ScrollView>


</RelativeLayout>