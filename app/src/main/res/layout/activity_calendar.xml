<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/acitivity_vertical_margin"
    android:paddingLeft="@dimen/acitivity_horizontal_margin"
    android:paddingRight="@dimen/acitivity_horizontal_margin"
    android:background="@color/white"
    tools:context=".view.activity.CalendarActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose The Date You Want To See Details"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>
    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_cal"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        >
    </CalendarView>





</LinearLayout>